{
  "name": "@frammr/mqtt-validator",
  "version": "1.0.0",
  "private": false,
  "description": "Hardware bus validator CLI tool.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "license": "Apache-2.0",
  "bin": "dist/src/bin.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "esbuild src/bin.ts src/index.ts --allow-overwrite --bundle --platform=node --outdir=dist/src && tsc -p tsconfig.json --emitDeclarationOnly && yarn copy",
    "clean": "rimraf ./dist",
    "copy": "cp -r ../../specifications ./dist/specifications",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@types/yargs": "^17.0.22",
    "ajv-formats": "^2.1.1",
    "esbuild": "^0.18.10",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6",
    "vitest": "^0.28.5"
  },
  "dependencies": {
    "@frammr/mqtt-types": "*",
    "ajv": "^8.12.0",
    "fdir": "^6.0.1",
    "mqtt": "^4.3.7",
    "picomatch": "^2.3.1",
    "yargs": "^17.7.0"
  }
}
